<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/backsplash"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                style="@style/TextViewBlackBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class: " />

            <TextView
                android:id="@+id/tvClass"
                style="@style/TextViewPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                style="@style/TextViewBlackBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: " />

            <TextView
                android:id="@+id/tvDate"
                style="@style/TextViewPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll1"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                style="@style/TextViewBlackBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Present: " />

            <TextView
                android:id="@+id/tvPresent"
                style="@style/TextViewPrimary"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                style="@style/TextViewBlackBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Late: " />

            <TextView
                android:id="@+id/tvLate"
                style="@style/TextViewPrimary"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <com.libRG.CustomTextView
        android:id="@+id/tvRollNo"
        android:layout_below="@id/ll2"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:lib_setRoundedView="true"
        app:lib_setRadius="50dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        app:lib_setRoundedBGColor="@color/darkSlateBlue"
        android:gravity="center" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btnSubmit"
        style="@style/SubmitButton"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_alignParentBottom="true"
        android:text="Submit Attendance"/>

    <TextView
        android:id="@+id/tvName"
        style="@style/TextViewBlackBold"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_above="@id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.yarolegovich.discretescrollview.DiscreteScrollView
        android:id="@+id/discreteScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvRollNo"
        android:layout_above="@id/tvName"
        app:dsv_orientation="horizontal" />
</RelativeLayout>
