<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <TextView
        android:id="@+id/tvSubject"
        style="@style/TextViewBlackBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textColor="@color/darkSlateBlue"
        android:padding="10dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvMarks"
        style="@style/TextViewBlackBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/lipstick"
        android:textSize="28sp" />


    <TextView
        android:id="@+id/tv1HighMarks"
        style="@style/TextViewBlackBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSubject"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:text="Highest Marks: "
        android:textSize="14sp" />
    <TextView
        android:id="@+id/tvHighMarks"
        style="@style/TextViewBlackBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSubject"
        android:layout_toRightOf="@id/tv1HighMarks"
        android:layout_marginLeft="10dp"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/tv1Parcentage"
        style="@style/TextViewBlackBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSubject"
        android:text="Total: "
        android:layout_toRightOf="@id/tvHighMarks"
        android:layout_marginLeft="30dp"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvParcentage"
        style="@style/TextViewBlackBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSubject"
        android:layout_toRightOf="@id/tv1Parcentage"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="7dp"
        android:textSize="14sp" />

    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorBlack"/>
</RelativeLayout>