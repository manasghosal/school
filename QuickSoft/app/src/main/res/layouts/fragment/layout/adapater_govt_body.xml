<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <cn.gavinliu.android.lib.shapedimageview.ShapedImageView
        android:id="@+id/imgProfile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@color/colorWhite"
        app:shape_mode="circle"
        app:stroke_color="@color/darkSlateBlue"
        app:stroke_width="0.6dp" />


    <TextView
        android:id="@+id/tvName"
        style="@style/TextViewBlackBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgProfile"
        android:layout_centerHorizontal="true"
        android:textColor="@color/darkSlateBlue"
        android:layout_marginTop="15dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvDesignation"
        style="@style/TextViewBlackBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textColor="@color/lipstick"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvEducation"
        style="@style/TextViewBlackBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDesignation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvEducation"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_explore_teal_700_24dp" />

        <TextView
            android:id="@+id/tvJobType"
            style="@style/TextViewBlackBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDesignation"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvLastVisit"
        style="@style/TextViewBlackBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLastVisit"
        android:layout_marginTop="5dp">

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btnPhone"
            style="@style/FBButtonTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:text="Call" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btnSMS"
            style="@style/FBButtonTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:text="SMS" />
    </LinearLayout>

</RelativeLayout>